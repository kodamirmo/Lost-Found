<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F1F1F1"
        android:orientation="vertical"
        android:paddingBottom="30dp" >

        <LinearLayout
            android:id="@+id/lineardetailP1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/lineardetailP2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imageUserdetailP"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/user" />

                <RelativeLayout
                    android:id="@+id/relativedetailP1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal" >

                    <LinearLayout
                        android:id="@+id/lineardetailP3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textActivityUserNamedetailP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="open-sans"
                            android:text="@string/userName"
                            android:textColor="#656565"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/userMsgLarge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:background="#00000000"
                            android:ems="10"
                            android:enabled="false"
                            android:focusable="false"
                            android:fontFamily="open-sans"
                            android:inputType="textMultiLine"
                            android:lineSpacingExtra="0dp"
                            android:text="@string/userMsgLarge"
                            android:textColor="#656565"
                            android:textSize="14sp"
                            android:typeface="sans" >
                        </EditText>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textActivityTimedetailP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/lineardetailP3"
                        android:layout_alignTop="@+id/lineardetailP3"
                        android:layout_marginRight="9dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="open-sans"
                        android:text="@string/postTime"
                        android:textColor="#B71C4E"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp" >

                <LinearLayout
                    android:id="@+id/linearTypePostDetailP"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#FFD400"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/imageTypePostHome"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_margin="3dp"
                        android:contentDescription="@string/report"
                        android:src="@drawable/home_ico" />

                    <TextView
                        android:id="@+id/textActivityTypePostHomeDetailP1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="open-sans"
                        android:text="@string/report_home"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageArrowDownDetail1"
                    android:layout_width="25dp"
                    android:layout_height="18dp"
                    android:layout_alignRight="@+id/linearTypePostDetailP"
                    android:layout_alignTop="@+id/linearTypePostDetailP"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="6dp"
                    android:contentDescription="@string/report"
                    android:src="@drawable/arrow_down" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/image1DetailP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/report"
                    android:scaleType="centerCrop"
                    android:src="@drawable/finding_home" >
                </ImageView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1" >

                    <ImageView
                        android:id="@+id/image2DetailP"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/report"
                        android:src="@drawable/finding_home2" >
                    </ImageView>

                    <ImageView
                        android:id="@+id/image3DetailP"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/report"
                        android:src="@drawable/finding_home3" >
                    </ImageView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>